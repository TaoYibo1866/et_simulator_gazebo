<launch>
  <arg name="world_name" default="green_field"/>
  <arg name="paused" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="use_sim_time" default="false"/>
  
  <include file="$(find rotor_gazebo)/launch/world.launch">
    <arg name="world_name" value="$(arg world_name)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)" />
  </include>

  <group ns="rotor2">
    <include file="$(find rotor_gazebo)/launch/spawn_robot.launch">
      <arg name="robot_name" value="rotor2" />
      <arg name="model" value="$(find rotor_description)/urdf/rotor2.xacro" />
      <arg name="is_kinematic" value="true"/>
      <arg name="x" value="-10"/>
      <arg name="y" value="0"/>
      <arg name="z" value="0"/>
      <arg name="R" value="0"/>
      <arg name="P" value="0"/>
      <arg name="Y" value="0"/>
    </include>
    <node name="rotor2_driver" pkg="rotor_simulator" type="rotor2_driver_node" output="screen">
    </node>
    <node name="rotor2_joy" pkg="rotor_simulator" type="rotor2_joy_node">
    </node>
  </group>

  <group ns="dji_m100_0">
    <include file="$(find drone_gazebo)/launch/spawn_mav.launch">
      <arg name="mav_name" value="dji_m100_0" />
      <arg name="model" value="$(find drone_description)/urdf/dji_m100_default.xacro" />
      <arg name="is_kinematic" value="true"/>
      <arg name="x" value="0"/>
      <arg name="y" value="0"/>
      <arg name="z" value="0"/>
      <arg name="R" value="0"/>
      <arg name="P" value="0"/>
      <arg name="Y" value="0"/>
    </include>
    <node name="hil_bridge" pkg="drone_simulator" type="hil_bridge_node">
      <param name="model_name" type="string" value="dji_m100_0"/>
    </node>
    <node name="moving_drone" pkg="rotor_simulator" type="moving_drone_node">
      <param name="x_offset" type="double" value="8"/>
      <param name="omega" type="double" value="0.3"/>
      <param name="a" type="double" value="6"/>
    </node>
  </group>

  <group ns="dji_m100_1">
    <include file="$(find drone_gazebo)/launch/spawn_mav.launch">
      <arg name="mav_name" value="dji_m100_1" />
      <arg name="model" value="$(find drone_description)/urdf/dji_m100_default.xacro" />
      <arg name="is_kinematic" value="true"/>
      <arg name="x" value="0"/>
      <arg name="y" value="0"/>
      <arg name="z" value="0"/>
      <arg name="R" value="0"/>
      <arg name="P" value="0"/>
      <arg name="Y" value="0"/>
    </include>
    <node name="hil_bridge" pkg="drone_simulator" type="hil_bridge_node">
      <param name="model_name" type="string" value="dji_m100_1"/>
    </node>
    <node name="moving_drone" pkg="rotor_simulator" type="moving_drone_node">
      <param name="x_offset" type="double" value="2"/>
      <param name="omega" type="double" value="-0.6"/>
      <param name="a" type="double" value="3"/>
      <param name="phase" type="double" value="0"/>
    </node>
  </group>

  <node name="joy" pkg="joy" type="joy_node" output="screen"/>

  <node name="image_view" pkg="image_view" type="image_view" args="image:=/camera/image_raw">
    <param name="autosize" type="bool" value="true"/>
  </node>

</launch>
